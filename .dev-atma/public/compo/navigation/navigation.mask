
:template #menuItemTemplate {
	li.~[class] {
			% if='name' >
				a.viewTitle
					href='~[: path ? path : ("/" + id) ]'
					x-dynamic='~[: !navigate ? "x-dynamic"]'
					
						> .roll-link
							> span data-title='~[name]'
								> '~[name]'
						
			ul > % each='items' >
				:import #menuItemTemplate;
		}
}

menu.~[: menuHidden ? "hidden"] {
	
	.menu-show;
	
	:scroller {
		
		.menu-logo >
			img src='http://lorempixel.com/200/120/abstract';
				
		% each='list' > section {
			
			h3.~[class]
				> '~[title]'
				
			ul >
				% each='items' >
					:import #menuItemTemplate;
					
			div style='text-align:right; opacity:.3' > '~[hint]'
		}
	
		div style='height:20px;';
	}
}

