UTest({
	'should render style' () {
		var template = `
			style {
				background: cyan;
			}
		`;
		return $render(template).done((el, doc) => {
			var style = doc.body.querySelector('style');
			notEq_(style, null);
			has_(style.textContent, 'background: cyan');
		});
	},
	'should render scoped style' () {
		var template = `
			div.styled {
				style scoped{
					:host {
						border: 2px solid green;
					}
					input {
						border: 4px solid red;
					}
				}
				input;
			}
			div.unstyled {
				input;
			}
		`;
		return $render(template).pipe(el => {
			return UTest.domtest(el, `
				find ('.styled') {
					css ('border-width', '2px');

					find('input') {
						css ('border-width', '4px');
					}
				}
				find ('.unstyled') {
					css ('border-width', '0px');
				}
			`)
		});
	}
});